<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16sp">

            <LinearLayout
                android:id="@+id/edit_profile_linearLayout_statusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/edit_profile_iv_back"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_margin="15sp"
                    android:background="@drawable/custom_forgotpassword_iv_chat"
                    android:src="@drawable/ic_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="17sp"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_profile_iv_avt"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_linearLayout_statusBar" />

            <!--         click image -> layout_upload_avata -->
            <ImageView
                android:id="@+id/edit_profile_iv_editAvt"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@drawable/custom_login_btn"
                android:padding="8sp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@+id/edit_profile_iv_avt"
                app:layout_constraintEnd_toEndOf="@+id/edit_profile_iv_avt" />

            <TextView
                android:id="@+id/edit_profile_txt_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="30sp"
                android:text="Name"
                android:textColor="#454545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_iv_avt" />

            <EditText
                android:id="@+id/edit_profile_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/login_radius_edt"
                android:elevation="10sp"
                android:enabled="false"
                android:hint="Your full name"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_title_name" />

            <ImageView
                android:id="@+id/edit_profile_iv_edit_name"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="16sp"
                android:src="@drawable/ic_edit_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_iv_avt"
                app:tint="@android:color/tab_indicator_text" />

            <TextView
                android:id="@+id/edit_profile_txt_title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="36sp"
                android:text="Email address"
                android:textColor="#454545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_name" />

            <ImageView
                android:id="@+id/edit_profile_iv_edit_email"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="36sp"
                android:layout_marginEnd="16sp"
                android:src="@drawable/ic_edit_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_name"
                app:tint="@android:color/tab_indicator_text" />

            <EditText
                android:id="@+id/edit_profile_txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/login_radius_edt"
                android:elevation="10sp"
                android:enabled="false"
                android:hint="Your email address"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_title_email" />

            <TextView
                android:id="@+id/edit_profile_txt_title_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="36sp"
                android:text="Phone number"
                android:textColor="#454545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_email" />

            <ImageView
                android:id="@+id/edit_profile_iv_edit_phoneNumber"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="36sp"
                android:layout_marginEnd="16sp"
                android:src="@drawable/ic_edit_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_email"
                app:tint="@android:color/tab_indicator_text" />

            <EditText
                android:id="@+id/edit_profile_txt_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/login_radius_edt"
                android:elevation="10sp"
                android:enabled="false"
                android:hint="Your phone number"
                android:inputType="phone"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_title_phoneNumber" />

            <TextView
                android:id="@+id/edit_profile_txt_title_birthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="36sp"
                android:text="Birth date"
                android:textColor="#454545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_phoneNumber" />

            <ImageView
                android:id="@+id/edit_profile_iv_edit_birthDate"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="36sp"
                android:layout_marginEnd="16sp"
                android:src="@drawable/ic_edit_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_phoneNumber"
                app:tint="@android:color/tab_indicator_text" />

            <EditText
                android:id="@+id/edit_profile_txt_birthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/login_radius_edt"
                android:elevation="10sp"
                android:enabled="false"
                android:hint="Your date of birth"
                android:inputType="date"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_title_birthDate" />

            <TextView
                android:id="@+id/edit_profile_txt_title_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="36sp"
                android:text="Postal Address"
                android:textColor="#454545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_birthDate" />

            <ImageView
                android:id="@+id/edit_profile_iv_edit_address"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="36sp"
                android:layout_marginEnd="16sp"
                android:src="@drawable/ic_edit_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_birthDate"
                app:tint="@android:color/tab_indicator_text" />

            <EditText
                android:id="@+id/edit_profile_txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/login_radius_edt"
                android:elevation="10sp"
                android:enabled="false"
                android:hint="Your public address"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_title_address" />

            <TextView
                android:id="@+id/edit_profile_txt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="20sp"
                android:text="* Name and public address will be shown to everyone. \n* Email and phone number are used for authentication and recovery"
                android:textColor="#878787"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_address" />

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_profile_cardView_change_password"
                android:layout_width="match_parent"
                android:layout_height="57sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="16sp"
                android:background="@color/white"
                app:cardCornerRadius="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edit_profile_btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="57sp"
                    android:background="#FF5862"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="20sp"
                    android:gravity="left|center_vertical"
                    android:paddingStart="20sp"
                    android:text="Change password"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_profile_cardView_save_changes"
                android:layout_width="match_parent"
                android:layout_height="57sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="16sp"
                android:layout_marginBottom="30sp"
                android:background="@color/white"
                app:cardCornerRadius="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_cardView_change_password">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edit_profile_btn_save_changes"
                    android:layout_width="match_parent"
                    android:layout_height="57sp"
                    android:background="#FF5862"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableTint="@color/white"
                    android:drawablePadding="20sp"
                    android:gravity="left|center_vertical"
                    android:paddingStart="20sp"
                    android:text="Update profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>