<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/reset_linearLayout_statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/changePassword_iv_back"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="15sp"
            android:background="@drawable/custom_forgotpassword_txt"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/changePassword_txt_statusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="17sp"
            android:text="Change password?"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/changePassword_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14sp"
        android:lineHeight="28sp"
        android:text="Create a new password\n(unsecure/deprecated - use email instead)"
        android:textColor="#3C3B3B"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_linearLayout_statusBar" />

    <TextView
        android:id="@+id/changePassword_txt_newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="28sp"
        android:text="@string/newPassword"
        android:textColor="#535252"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassword_txt_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changePassword_constraintLayout_newPass"
        android:layout_width="350sp"
        android:layout_height="71sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassword_txt_newPassword">

        <EditText
            android:id="@+id/changePassword_edt_newPass"
            android:layout_width="330sp"
            android:layout_height="51sp"
            android:background="@drawable/custom_login_edt"
            android:elevation="10sp"
            android:hint="New password"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textColorHint="#888787"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/changePassword_iv_newPass_visibility"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="23sp"
        android:layout_marginEnd="25sp"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintEnd_toEndOf="@+id/changePassword_constraintLayout_newPass"
        app:layout_constraintTop_toTopOf="@+id/changePassword_constraintLayout_newPass" />

    <TextView
        android:id="@+id/changePassword_txt_confirmNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="32sp"
        android:text="@string/confirmNewPassword"
        android:textColor="#535252"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassword_constraintLayout_newPass" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changePassword_constraintLayout_confirmNewPass"
        android:layout_width="350sp"
        android:layout_height="71sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassword_txt_confirmNewPassword">

        <EditText
            android:id="@+id/changePassword_edt_confirmNewPass"
            android:layout_width="330sp"
            android:layout_height="51sp"
            android:background="@drawable/custom_login_edt"
            android:elevation="10sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10sp"
            android:paddingStart="20sp"
            android:textColor="@color/black"
            android:textColorHint="#888787"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/changePassword_iv_confirm_visibility"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="23sp"
        android:layout_marginEnd="25sp"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintEnd_toEndOf="@+id/changePassword_constraintLayout_confirmNewPass"
        app:layout_constraintTop_toTopOf="@+id/changePassword_constraintLayout_confirmNewPass" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changePassword_btn_save"
        android:layout_width="360sp"
        android:layout_height="51sp"
        android:layout_marginBottom="56sp"
        android:background="@drawable/custom_login_btn"
        android:gravity="center"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>