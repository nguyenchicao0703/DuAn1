                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_edit_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_txt_email" />

            <EditText
