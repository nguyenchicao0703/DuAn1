<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180sp"
    android:layout_height="300sp"
    android:backgroundTint="@color/white"
    android:elevation="15sp"
    android:padding="30sp"
    app:cardCornerRadius="10sp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/item_iv_product_featured"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="4sp"
            android:background="@color/white"
            android:padding="10sp"
            android:src="@mipmap/iv_item_hamburger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_txt_featured_name"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:text="Hamburger"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/item_iv_product_featured"
            app:layout_constraintStart_toStartOf="@+id/item_iv_product_featured"
            app:layout_constraintTop_toBottomOf="@+id/item_iv_product_featured" />

        <TextView
            android:id="@+id/item_txt_featured_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:text="30.000"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/item_txt_featured_name"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/item_txt_featured_name"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_featured_name" />

        <TextView
            android:id="@+id/item_txt_featured_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent sales: %sales%"
            app:layout_constraintTop_toBottomOf="@id/item_txt_featured_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>