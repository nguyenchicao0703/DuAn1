<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.RegisterProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/registerProfile_linearLayout_statusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/registerProfile_iv_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/custom_forgotpassword_txt"
                    android:src="@drawable/ic_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="17dp"
                    android:text="Fill in your bio"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/registerProfile_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:lineHeight="40dp"
                android:text="This data will be displayed in your account profile for security"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProfile_linearLayout_statusBar" />

            <TextView
                android:id="@+id/registerProfile_txt_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/fullName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/registerProfile_edt_fullName"
                android:layout_width="330dp"
                android:layout_height="51dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_login_edt"
                android:elevation="10dp"
                android:hint="Full name"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#888787"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/registerProfile_txt_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/nickName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/registerProfile_edt_nickName"
                android:layout_width="330dp"
                android:layout_height="51dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_login_edt"
                android:elevation="10dp"
                android:hint="Nickname"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#888787"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/registerProfile_txt_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/phoneNumber"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/registerProfile_edt_phoneNumber"
                android:layout_width="330dp"
                android:layout_height="51dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_login_edt"
                android:elevation="10dp"
                android:hint="Phone number"
                android:inputType="number"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#888787"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/registerProfile_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/date"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/registerProfile_edt_date"
                android:layout_width="330dp"
                android:layout_height="51dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_login_edt"
                android:elevation="10dp"
                android:hint="Date or Birthday"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#888787"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/registerProfile_txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/address"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/registerProfile_edt_address"
                android:layout_width="330dp"
                android:layout_height="51dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_login_edt"
                android:elevation="10dp"
                android:hint="Address"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#888787"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerProfile_btn_next"
                android:layout_width="360dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_login_btn"
                android:text="Complete Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>