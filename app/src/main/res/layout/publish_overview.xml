<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="91sp"
        tools:layout_editor_absoluteY="151sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sell_linearLayout_statusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:paddingEnd="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/custom_home_iv_food"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/home_chat_iv_statusBar_food"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_margin="15sp"
                        android:src="@drawable/ic_food" />
                </LinearLayout>

                <TextView
                    android:id="@+id/home_chat_txt_statusBar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25sp"
                    android:text="Published Products"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sell_constraint_sell"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sell_linearLayout_statusBar">

                <EditText
                    android:id="@+id/sell_edt_sell"
                    android:layout_width="0sp"
                    android:layout_height="60sp"
                    android:background="@drawable/custom_home_edt_search"
                    android:hint="Search"
                    android:paddingStart="28sp"
                    android:paddingEnd="20sp"
                    android:textColorHint="#504F4F"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sell_btn_add"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/sell_iv_sell"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/sell_edt_sell"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sell_btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:layout_marginStart="12sp"
                    android:background="@drawable/custom_login_btn"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:text="Publish"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/sell_edt_sell"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sell_edt_sell"
                    app:layout_constraintTop_toTopOf="@id/sell_edt_sell" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/sell_normal_view"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginTop="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sell_constraint_sell">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sell_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24sp"
                    android:orientation="vertical"
                    android:paddingStart="10sp"
                    android:paddingEnd="5sp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:itemCount="2"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/home_item_recycler_menu" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sell_empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.42"
                android:paddingTop="80sp"
                android:paddingBottom="80sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sell_constraint_sell">

                <ImageView
                    android:id="@+id/sell_empty_iv"
                    android:layout_width="250sp"
                    android:layout_height="250sp"
                    android:src="@drawable/ic_sentiment_neutral"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@android:color/tab_indicator_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You don't have any products"
                    android:textSize="26sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sell_empty_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>