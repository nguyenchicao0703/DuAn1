<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:backgroundTint="@color/white"
    android:elevation="15sp"
    android:padding="30sp"
    app:cardCornerRadius="10sp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/item_iv_products_order"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:padding="0sp"
            android:src="@mipmap/iv_item_hamburger"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_txt_order_name"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:lines="1"
            android:text="Hamburger"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_iv_products_order"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_txt_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28sp"
            android:layout_marginTop="12sp"
            android:text="Hamburger"
            android:textColor="#777777"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_iv_products_order"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_order_name" />

        <TextView
            android:id="@+id/item_txt_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.000"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/item_txt_order_count"
            app:layout_constraintTop_toTopOf="@id/item_txt_order_name" />

        <TextView
            android:id="@+id/item_txt_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8sp"
            android:paddingEnd="12sp"
            android:text="x2"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/item_txt_order_price"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>