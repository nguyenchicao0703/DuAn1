<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_iv_chat"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="12sp"
        android:src="@mipmap/iv_avt_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="8sp"
        android:background="@drawable/custom_receiver"
        android:maxWidth="300sp"
        android:orientation="vertical"
        android:paddingStart="15sp"
        android:paddingTop="5sp"
        android:paddingEnd="15sp"
        android:paddingBottom="5sp"
        app:layout_constraintEnd_toStartOf="@+id/item_iv_chat"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_txt_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxWidth="300sp"
            android:text="Hello, can we talk to each other?"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_txt_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:text="12:32"
            android:textColor="#E6E6E6" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>