<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid android:color="#EEEEEE"></solid>
    <size android:height="50sp" />
    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1sp"
        android:color="@color/white"></stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:bottom="5sp"
        android:left="5sp"
        android:right="5sp"
        android:top="5sp"></padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners android:radius="10sp"></corners>

</shape>
